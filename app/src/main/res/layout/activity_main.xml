<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Main"
    android:background="@drawable/bg_2"
    android:padding="20dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_p_l"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:id="@+id/iv_logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_below="@+id/iv_logo"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/tv_header"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL : "
        android:textColor="@color/colorWhiteTransparent"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv_header"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/tv_email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_streak_info_blue"
        android:layout_below="@+id/tv_email"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:id="@+id/et_email"
        android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PASSWORD : "
        android:textColor="@color/colorWhiteTransparent"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:id="@+id/tv_pwd"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_streak_info_blue"
        android:layout_below="@+id/tv_pwd"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:id="@+id/et_pwd"
        android:paddingLeft="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border_pink"
        android:text="REGISTER"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/et_pwd"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_register"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By registering you agree to Panya's Terms of Services and Privacy Policy"
        android:textColor="@color/colorWhite"
        android:textSize="13dp"
        android:layout_below="@+id/btn_register"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="center"/>
</RelativeLayout>